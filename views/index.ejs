<%- include partials/header %>
<div class="top-header">
  <h1 class="text-center">FUNCIONÁRIO DO MÊS</h1>
  <p class="text-center lead uppercase"></p>
  <form action="/workers/name" method="get" class="inline-form">
    <div class="">
      <input type="search" name="name" id="name" class="form-control form-control-lg" placeholder="BUSQUE PELO NOME">
    </div>
  </form>
</div>
<section class="home pt-3">
  <div class="container">
    <div class="row justify-content-center align-items-center pt-5">
      <h2 class="text-center d-block pb-3">TOP 10 FUNCIONÁRIOS DO MÊS</h2>
      <div class="col-xs-12 col-md-10">
        <div class="card-columns text-center">
          <% funcionarios.forEach(funcionario => { %> 
            <div class="card shadow">
              <div class="card-body">
                <h4><%= funcionario.nome %></h4>
                <h6>Total de cargos acumulados: <%= funcionario.acumulo %></h6>
                <h6>Estimativa de despesa anual: <br><span class="bg-danger p-2 d-block m-2 rounded shadow"><%= funcionario.salarioAnual %></span></h6>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include partials/footer %>